<div class="container offset well">
<div class="panel panel-primary" >
	<div class="panel-heading">
		<h3 class="panel-title">New user </h3>
	</div>
	<div class="panel-body">
		<%= form_for :user, url:users_path do |f| %>

			<div class="form-group">
			<%= f.label "Name" %>
			<%= f.text_field :name , :class =>  "form-control" %>
			</div>

			<div class="form-group">
			<%= f.label "E-mail id" %>
			<%= f.text_field :emailid  , :class =>  "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label "Role" %>
				<%= f.collection_select :roles_id, @role, :id, :role_name , {}, {:class =>  "drop-down"} %>
			</div>

			<div class="form-group">
				<%= f.label " Team" %>
				<%= f.collection_select :teams_id, @team, :id, :team_name , {}, {:class =>  "drop-down"} %>
			</div>
			<div class="form-group">
				<%= f.label " Department" %>
				<%= f.collection_select :departments_id, @department, :id, :dept_name , {}, {:class =>  "drop-down"} %>
			</div>

			<div class="form-group">
			<%= f.label "Password" %>
			<%= f.password_field :password ,:class =>  "text-box" %>
			</div>

			<div class="form-group">
			<%= f.label "Confirm Password" %>
			<%= f.password_field :password ,:class =>  "text-box"%>
			</div>

			
			<div class="form-group">
			<%= f.submit  'Save' , :class => "btn btn-primary btn-sm"%>
			</div>

		<% end %>
	</div>
</div>
</div>
